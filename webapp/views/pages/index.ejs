<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body>

	<header>
		<% include ../partials/header %>
	</header>

	<main>
		 <div class="row">
        	<div class="col-lg-8 col-sm-8 col-lg-offset-4 text-center">
        		<div class="container-4">
        			<form action="/searchSimple" method="post">
                    <input type="search" id="search" name="searchQuery" placeholder="Search for monsters..." />
                    <button class="icon"><i class="fa fa-search"></i></button>
                    </form>
                   
                
					                   	
                </div>
        	</div>
        </div>
        <div class="row">

        	<div class="col-lg-3 col-lg-offset-5">
        	  	<h2>Monsters<br> stored in DB: <%= total %> </h2>
        	</div>
        	<div class="col-lg-3">
                   	<h2>Latest monsters:</h2>
                   	<% for(var i = 0; i < latest.length; i++) { %> 
                   		<a href="/view/<%= latest[i].monsterName %>"><h3><%= latest[i].monsterName %> </h3></a>
                   	<%}%>
        	</div>

        </div>

        <% include ../partials/simpleSearch %>

	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>


</body>
</html>